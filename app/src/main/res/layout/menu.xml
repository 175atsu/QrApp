<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/style_back"
                                                   android:layout_height="match_parent">
    <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:transitionName="image1"
            android:background="@drawable/style_frame"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/btnQr"/>
    <TextView
            android:text="MY QR CODE"
            android:autoSizeTextType="uniform"
            android:layout_width="157dp"
            android:textColor="#ffffff"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:background="@drawable/style_list"
            android:transitionName="image2"
            android:id="@+id/btnList" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnQr"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:background="@drawable/style_edit"
            android:transitionName="image3"
            android:id="@+id/btnEdit"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/btnList"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp" app:srcCompat="@drawable/style_camera"
            android:id="@+id/btnCamera" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEdit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="USER LIST"
            android:autoSizeTextType="uniform"
            android:textColor="#ffffff"
            android:layout_width="157dp"
            android:layout_height="40dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="EDIT MYDATA"
            android:autoSizeTextType="uniform"
            android:textColor="#ffffff"
            android:layout_width="157dp"
            android:layout_height="40dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="REED CAMERA"
            android:autoSizeTextType="uniform"
            android:textColor="#ffffff"
            android:layout_width="157dp"
            android:layout_height="40dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>