<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:background="#e12311"
                                                   android:layout_height="match_parent">
    <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp" app:srcCompat="@drawable/abemakun"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.555"/>
    <Button
            android:text="編集"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEdit" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="269dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCamera"/>
    <Button
            android:text="リスト"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnList"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="260dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="63dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="カメラ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCamera" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="269dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp" app:srcCompat="@drawable/style_frame"
            android:transitionName="image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/abc"/>
    <TextView
            android:text="MY QR CODE"
            android:autoSizeTextType="uniform"
            android:layout_width="157dp"
            android:textColor="#ffffff"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>