<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@drawable/style_back"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="187dp"
            android:layout_height="106dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            android:id="@+id/user_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="59dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="141dp"
            android:layout_height="69dp"
            android:autoSizeTextType="uniform"
            android:id="@+id/user_twitter"
            android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="204dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="143dp"
            android:layout_height="69dp"
            android:autoSizeTextType="uniform"
            android:id="@+id/user_github"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/user_twitter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="188dp"/>
    <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:id="@+id/btnReturn"
            android:layout_marginTop="82dp" app:layout_constraintTop_toBottomOf="@+id/user_github"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="243dp"/>
    <Button
            android:text="削除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:id="@+id/btnDetail"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/btnReturn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="207dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="116dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>